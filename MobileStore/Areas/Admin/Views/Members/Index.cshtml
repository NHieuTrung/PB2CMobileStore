@model IEnumerable<Models.EF.Member>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- partial -->
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="table-employees-tab" data-toggle="tab" href="#table-employees" role="tab" aria-controls="table-employees" aria-selected="true">Nhan vien</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="table-customers-tab" data-toggle="tab" href="#table-customers" role="tab" aria-controls="table-customers" aria-selected="false">Khach hang</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="table-employees" role="tabpanel" aria-labelledby="table-employees-tab">
                            <div class="card-body">
                                <h4 class="card-title">Nhân viên</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped" id="DATAtable-employees">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.MemberEmail)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.FullName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Birthday)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.RegDate)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.FileImage)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.GenderType.GenderName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.MemberType.RoleMember)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Store.StoreName)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model.Where(m => m.MemberTypeId == 1 ||m.MemberTypeId==2))
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MemberEmail)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Birthday)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.RegDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FileImage)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.GenderType.GenderName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MemberType.RoleMember)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Store.StoreName)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.MemberId }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.MemberId })
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="table-customers" role="tabpanel" aria-labelledby="table-customers-tab">
                            <div class="card-body">
                                <h4 class="card-title">Khách hàng</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped" id="DATAtable-customers">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.MemberEmail)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.FullName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.FileImage)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.GenderType.GenderName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.MemberType.RoleMember)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                             @foreach (var item in Model.Where(m=>m.MemberTypeId==3))
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MemberEmail)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FileImage)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.GenderType.GenderName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MemberType.RoleMember)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.MemberId }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.MemberId })
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("Create")" class="btn btn-inverse-success btn-block">Create new Product</a>
                </div>
            </div>
    <!-- content-wrapper ends -->
</div>
<!-- main-panel ends -->


