@model IEnumerable<Models.EF.ShoppingCart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">ShoppingCart</h4>
                <div class="table-responsive">
                    <table class="table table-striped" id="DATAtable-employees">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShippedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PaymentType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StatusCart)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Member.MemberEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Member1.MemberEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Promotion.PromotionCode)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShippedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusCart)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Member.MemberEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Member1.MemberEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Promotion.PromotionCode)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ShoppingCartId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ShoppingCartId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ShoppingCartId })
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>

