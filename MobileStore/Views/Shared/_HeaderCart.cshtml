 <!-- Cart -->
<div class="cart">
    <div class="cart_container d-flex flex-row align-items-center justify-content-end">
        <div class="cart_icon">
            <img src="/Assets/user/images/cart.png" alt="">
            <div class="cart_count"><span>@ViewBag.CountItem</span></div>
        </div>
        <div class="cart_content">
            <div class="cart_text"><a href="@Url.Action("Index","ShoppingCart")">Cart</a></div>
            <div class="cart_price">@ViewBag.SumPrice</div>
        </div>
    </div>
</div>
